<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SaveFragment"
    android:transitionName="shared_container"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarSave"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Agenda"
            app:menu="@menu/toolbar_save"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            />

    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/s_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Titulo"
        android:inputType="text|textAutoCorrect"
        android:textSize="18sp"
        android:minHeight="48dp"
        android:alpha="0.75"
        android:textStyle="bold"
        android:letterSpacing="0.06"
        android:textColor="@color/bonito"
        android:padding="8dp"
        android:background="@color/white"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="5dp"
        />

    <EditText
        android:id="@+id/s_texto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/bonito"
        android:gravity="start"
        android:layout_marginHorizontal="16dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:background="@color/white"
        android:editable="true"
        android:hint="Empiece a Escribir"
        android:inputType="text|textAutoCorrect|textAutoComplete|textMultiLine"/>



</LinearLayout>